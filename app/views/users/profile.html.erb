<h1>Profile</h1>
<% if session[:user_id] %>
	<p> You are logged in! Hi <%= @user.name %></p>

	</br>

	<%= link_to "edit", edit_user_path(@user)%>

<% else %>
	<p> Who are you? Log in please! </p>
<% end %>

<% if !session[:user_id] %>
	<p> You cannot make posts yet...</p>
<% else %>

	<p> Wanna make a new post?</p>

	<%= form_for Post.new do %> 
		<%= label_tag 'Post' %>
		<%= text_field_tag 'Post' %>
		<%= submit_tag "Submit" %>
	<% end %>
<% end %>